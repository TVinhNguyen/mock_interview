{
  "name": "stt-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/stt-service",
  "projectType": "application",
  "tags": ["type:backend", "scope:service"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python app.py",
        "cwd": "apps/stt-service"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t ai-interview-stt .",
        "cwd": "apps/stt-service"
      }
    }
  }
}
